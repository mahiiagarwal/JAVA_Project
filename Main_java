import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        PGManager pg = new PGManager();
        Scanner sc = new Scanner(System.in);

        while (true) {
            System.out.println("\n===== HOSTEL/PG MANAGEMENT SYSTEM =====");
            System.out.println("1. Add Resident");
            System.out.println("2. View Residents");
            System.out.println("3. Update Resident");
            System.out.println("4. Remove Resident");
            System.out.println("5. Exit");
            System.out.print("Enter your choice: ");

            int ch = sc.nextInt();
            sc.nextLine();

            switch (ch) {

                case 1:
                    System.out.print("Enter ID: ");
                    int id = sc.nextInt();
                    sc.nextLine();

                    System.out.print("Enter Name: ");
                    String name = sc.nextLine();

                    System.out.print("Enter Phone: ");
                    String phone = sc.nextLine();

                    System.out.print("Enter Room Number: ");
                    String room = sc.nextLine();

                    pg.addResident(new Resident(id, name, phone, room));
                    break;

                case 2:
                    pg.viewResidents();
                    break;

                case 3:
                    System.out.print("Enter Resident ID to Update: ");
                    int uid = sc.nextInt();
                    sc.nextLine();

                    System.out.print("Enter New Phone: ");
                    String newPhone = sc.nextLine();

                    System.out.print("Enter New Room: ");
                    String newRoom = sc.nextLine();

                    pg.updateResident(uid, newPhone, newRoom);
                    break;

                case 4:
                    System.out.print("Enter Resident ID to Remove: ");
                    int rid = sc.nextInt();
                    pg.removeResident(rid);
                    break;

                case 5:
                    System.out.println("Thank you!");
                    System.exit(0);

                default:
                    System.out.println("Invalid choice!");
            }
        }
    }
}
